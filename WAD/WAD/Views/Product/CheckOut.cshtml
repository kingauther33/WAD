@model WAD.Models.Order

@{
    ViewBag.Title = "CheckOut";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
    WAD.Models.Cart cart = Session["cart"] != null ? (WAD.Models.Cart)Session["cart"] : new WAD.Models.Cart();
}

<h2>CheckOut</h2>
@if (cart.CartItems.Count > 0)
{
    <div class="row">
        <div class="col-8">
            @{ Html.BeginForm("CreateOrder");}
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Telephone, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-danger">Create Order</button>
            </div>
            @{ Html.EndForm();}
        </div>
        <div class="col-4">
            <table class="table">
                <thead>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th>Subtotal</th>
                </thead>
                <tbody>
                    @foreach (var item in cart.CartItems)
                    {
                        var sub = item.Quantity * item.Product.Price;
                        <tr>
                            <td>@item.Product.Name</td>
                            <td>@item.Product.Price</td>
                            <td>@item.Quantity</td>
                            <td>@sub</td>
                        </tr>
                    }
                    <tr>
                        <td colspan="3">Grand Total</td>
                        <td>@cart.GrandTotal</td>
                    </tr>  
                </tbody>
            </table>
            
        </div>
    </div>
}

else
{
    <h5>Chua co san pham de dat hang</h5>
}


