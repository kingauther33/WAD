@model dynamic

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h2>Index</h2>

<div class="products">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="filters">
                    <ul>
                        <li class="active" data-filter="*">All Products</li>
                        @foreach (AssignmentWAD.Models.Brand brand in Model.Brands)
                        {
                            <li data-filter=".@brand.Name">@brand.Name</li>
                        }
                        @*<li data-filter=".des">Featured</li>
                        <li data-filter=".dev">Flash Deals</li>
                        <li data-filter=".gra">Last Minute</li>*@
                    </ul>
                </div>
            </div>


            @*Product Item*@
            <div class="col-md-12">
                <div class="filters-content">
                    <div class="row grid">
                        @foreach (AssignmentWAD.Models.Product product in Model.Products)
                        {
                            <div class="col-lg-4 col-md-4 all @product.Category.Name">
                                <div class="product-item">
                                    @*<a href="#"><img src="assets/images/product_01.jpg" alt=""></a>*@
                                    <a href="#"><img src="~/Content/assets/images/@Html.DisplayFor(modelItem => product.Image)" alt=""></a>
                                    <div class="down-content">
                                        <a href="#"><h4>@Html.DisplayFor(modelItem => product.Name)</h4></a>
                                        <h6>$@Html.DisplayFor(modelItem => product.Price)</h6>
                                        <p>@Html.DisplayFor(modelItem => product.Description)</p>
                                        <ul class="stars">
                                            <li><i class="fa fa-star"></i></li>
                                            <li><i class="fa fa-star"></i></li>
                                            <li><i class="fa fa-star"></i></li>
                                            <li><i class="fa fa-star"></i></li>
                                            <li><i class="fa fa-star"></i></li>
                                        </ul>
                                        @*<span>Reviews (12)</span> <br />*@
                                        @Html.ActionLink("Edit", "Edit", new { id = product.Id }, new { @class = "btn btn-info" })
                                        @Html.ActionLink("Details", "Details", new { id = product.Id }, new { @class = "btn btn-info" })
                                        @Html.ActionLink("Delete", "Delete", new { id = product.Id }, new { @class = "btn btn-info" })
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            @*Pagination*@
            <div class="col-md-12">
                <ul class="pages">
                    <li class="active"><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#"><i class="fa fa-angle-double-right"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>


@Html.ActionLink("Create New", "Create", "Product", null, new { @class = "btn btn-primary my-5" })
